<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register </title>

    <!-- MATERIAL DESIGN ICONIC FONT -->
    <link rel="stylesheet" href="/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">

    <!-- STYLE CSS -->
    <link rel="stylesheet" href="/css/signup.style.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="icon" href="/icons/warranty_icon.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css"
        type="text/css" media="all" />
    <script type="text/javascript" src="/js/web3.js"></script>
    <script type="text/javascript" src="/js/metamask_connect.js"></script>
</head>

<body>
    <header class="mhdr">
        <ul class="navigator">
            <% let __dirname=process.cwd()%>
                <%- include( __dirname+"/views/static/partials/navigationBar.html") %>
        </ul>
    </header>
    <div class="wrapper">
        <div class="inner">

            <form id="dataEntry" action="" method="post">
                <h3>Registration Form</h3>
                <div class="form-group">
                    <div class="form-wrapper">
                        <label for="">First Name</label>
                        <input type="text" name="userName" class="form-control" pattern="[a-zA-Z0-9_]{1,20}"
                        title="must contain only letters ,underscore or number"
                        required>
                    </div>
                    <div class="form-wrapper">
                        <label for="">Last Name</label>
                        <input type="text" name="lname" class="form-control" pattern="[a-zA-Z0-9_]{1,20}"
                        title="must contain only letters ,underscore or number"
                         required>
                    </div>
                </div>

                <div class="form-wrapper">
                    <label for="">User ID</label>
                    <input type="text" name="userId" class="form-control" pattern="[A-Za-z0-9_]+" 
                    title="must contain only letters ,underscore or number"
                    required>
                </div>
                <div class="form-wrapper">
                    <label for="">Password</label>
                    <input type="password" name="password" class="form-control" pattern=".{6,}"
                        title="must be six or more symbols/characters" required>
                </div>
                <div class="form-wrapper">
                    <label for="">Confirm Password</label>
                    <input type="password" name="c_password" class="form-control" pattern=".{6,}"
                        title="must be six or more symbols/characters" required>
                </div>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" required> I caccept the Terms of Use & Privacy Policy.
                        <span class="checkmark"></span>
                    </label>
                </div>
                <button type="submit">Register Now</button>
            </form>
        </div>
    </div>

    <div id="messenger" style="
          position:fixed;
          z-index:1;
          top:50vh;
          right:10px;
          color:white;
          font-size:1.5em;
          padding:5px 10px;
          opacity:0;
          transition:opacity 0.5s ease-in-out">
    </div>
</body>
<script type="text/javascript" src="/js/signup.js"></script>
<script type="text/javascript" src="/js/checkMetamask.js"></script>

</html>